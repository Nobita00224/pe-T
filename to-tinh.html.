<body>

  <div class="card">
    <h1>💖 Hello crush 💖</h1>
    <p>Tớ có điều này muốn nói với cậu...</p>
    <button onclick="confess()">Nhấn vào đây nè!</button>
  </div>

  <script>
    function confess() {
      const card = document.querySelector('.card');
      card.innerHTML = `
        <h1>💘 Tớ thích cậu rất nhiều! 💘</h1>
        <p>Muốn làm người yêu tớ hông? 😊</p>
        <button onclick="alert('Tớ sẽ chờ câu trả lời của cậu nhé 💕')">OK hihi 😳</button>
      `;
    }

    // Tạo trái tim bay lên
    setInterval(() => {
      const heart = document.createElement('div');
      heart.classList.add('heart');
      heart.style.left = Math.random() * 100 + 'vw';
      heart.style.fontSize = Math.random() * 20 + 10 + 'px';
      heart.innerHTML = '❤️';
      document.body.appendChild(heart);
      setTimeout(() => {
        heart.remove();
      }, 4000);
    }, 300);
  </script>

</body>
