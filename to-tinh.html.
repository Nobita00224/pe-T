  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Tỏ tình nè 💌</title>
  <style>
    body {
      margin: 0;
      padding: 0;
      background: linear-gradient(to right, #ff9a9e, #fad0c4);
      font-family: 'Segoe UI', sans-serif;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      overflow: hidden;
    }

    .card {
      background: white;
      padding: 40px;
      border-radius: 20px;
      text-align: center;
      box-shadow: 0 0 20px rgba(0,0,0,0.1);
      position: relative;
      z-index: 10;
    }

    .card h1 {
      font-size: 2rem;
      color: #e91e63;
    }

    .card p {
      font-size: 1.2rem;
      margin: 20px 0;
    }

    .card button {
      padding: 10px 20px;
      border: none;
      background: #e91e63;
      color: white;
      border-radius: 10px;
      cursor: pointer;
      font-size: 1rem;
      transition: background 0.3s;
    }

    .card button:hover {
      background: #c2185b;
    }

    .heart {
      position: absolute;
      color: red;
      font-size: 20px;
      animation: floatUp 4s linear infinite;
      z-index: 1;
    }

    @keyframes floatUp {
      0% {
        opacity: 1;
        transform: translateY(0) scale(1);
      }
      100% {
        opacity: 0;
        transform: translateY(-100vh) scale(1.5);
      }
